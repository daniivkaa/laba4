{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}ЧайШоп{% endblock %}</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    {% block stylesheets %}{% endblock %}
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="height: 70px;">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a class="navbar-brand" href="{{ path('home') }}">{{ app.user.username }}</a>
        {% else %}
            <a class="navbar-brand" href="{{ path('home') }}">Гость</a>
        {% endif %}
      <div class="collapse navbar-collapse" id="navbarSupportedContent"></div>
      <ul class="nav navbar-nav navbar-right">

        {% if is_granted('ROLE_ADMIN') %}
            <li><a class="nav-link" href="{{ path('admin') }}">Админка</a></li>
        {% endif %}
          
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <li><a class="nav-link" href="{{ path('app_logout') }}">Выйти</a></li>
        {% else %}
            <li><a class="nav-link" href="{{ path('app_login') }}">Войти</a></li>
            <li><a class="nav-link" href="{{ path('app_register') }}">Зарегистрироваться</a></li>
        {% endif %}
      </ul>
    </nav>
    {% block body %}{% endblock %} {% block javascripts %}{% endblock %}
  </body>
</html>