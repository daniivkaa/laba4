{# templates/registration/index.html.twig #} {% extends 'base.html.twig' %} 
{% block title %}Регистрация{% endblock %}
{%block body %}
<div class="container">
  <div class="row">
    <div class="col-md-10 ml-md-auto">
      <div class="card bg-light mb-3 mt-5" style="width: 800px">
        <div class="card-body">
          <div class="card-header mb-3">Пожалуйста зарегестрируйтесь</div>
          {{ form_start(registrationForm) }}
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(registrationForm.name, {'attr': {label: 'Имя Пользователя', 'class': 'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(registrationForm.email, {'attr': {label: 'Email', 'class': 'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(registrationForm.plainPassword.first, {label: 'Пароль', 'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(registrationForm.plainPassword.second, {label: 'Повтор пароля', 'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
            
         <div class="form_group">
            <div class="col-md-12 mb-3">
                {{ form_row(registrationForm.agreeTerms, {label: 'Я принимаю правила сайта'}) }}
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
              <button type="submit" class="btn btn-primary">
                <i class="fa fa-btn fa-user">Регистрация</i>
              </button>
            </div>
          </div>
          {{ form_end(registrationForm) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}